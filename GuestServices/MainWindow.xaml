<Window x:Class="GuestServices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuestServices"
        mc:Ignorable="d" Background="SlateGray"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="24*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="3" FontSize="18" Background="silver">
            <MenuItem Header="_File">
                <MenuItem x:Name="mainMenuItem" Header="_Main"></MenuItem>
                <MenuItem x:Name="exitMenuItem" Header="E_xit"></MenuItem>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="content" Margin="20,36,20,20" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
    </Grid>
</Window>
